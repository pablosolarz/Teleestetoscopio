<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.clientrqtelestetoscopio.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



    <Switch
        android:id="@+id/switchConectar"
        android:layout_width="182dp"
        android:layout_height="32dp"
        android:text="Conectar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="63dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.146" />

    <TextView
        android:id="@+id/textReceptoresConectados"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:text="Receptores conectados"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/switchConectar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/switchConectar"
        android:layout_marginLeft="7dp" />

    <TextView
        android:id="@+id/textNroReceptores"
        android:layout_width="54dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textReceptoresConectados"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textReceptoresConectados"
        app:layout_constraintLeft_toRightOf="@+id/textReceptoresConectados"
        android:layout_marginLeft="12dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txNroTel"
        android:layout_width="121dp"
        android:layout_height="29dp"
        android:text="NroTelefono"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/textReceptoresConectados"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="149dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="84dp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteY="334dp"
        tools:layout_editor_absoluteX="33dp" />

</android.support.constraint.ConstraintLayout>
